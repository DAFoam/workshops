FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      alphat;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -1 0 0 0 0];

internalField   uniform 1e-4;

boundaryField
{
    "wing.*"
    {
        type            compressible::alphatWallFunction;
        value           $internalField;
    }
    sym
    {
        type            symmetry;
    }
    inout
    {
        type            calculated;
        value           $internalField;
    }
}


